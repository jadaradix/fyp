- var title = "Twitter"
doctype html
html
  head
    include partials/_head-head.jade
  body
    include partials/_head-body.jade
    main
      .wrapper.section-wrapper.feature.bg-blue
        section.clear-fix
          div
            h1 What's your Twitter?
            form.feature#twitter-form
              input(type="text", value="@jadaradix")#twitter-account
              button
                span Fetch Tweets
                span.right.fa.fa-caret-right
            p.
              Make sure your account is public! We store your 200 most recent tweets and delete them as soon as we're done.
      .wrapper.section-wrapper.feature.bg-green
        section.clear-fix
          div
            h1#twitter-status
              span.fa.fa-spin.fa-spinner
              span &nbsp;&nbsp;Fetching...
            p.
              This only takes a second, honest.
    include partials/_foot-body.jade
    script(src="js/copied/jquery.min.js")
    script(src="js/copied/async.js")
    script(src="js/twitter.js")